<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/base_layout_style">

<!--    <TextView-->
<!--        android:gravity="top|left"-->
<!--        android:id="@+id/bondedBatteryTitle"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginBottom="2dp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:text="@string/informaci_n_de_la_bater_a_rfid"-->
<!--        style="@style/style_normal_font" />-->

    <include layout="@layout/title_divider" />

    <TextView
        android:id="@+id/batteryLevelText"
        style="@style/style_green_font"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/default_top_margin"
        android:layout_weight="5"
        android:text="@string/battery_percentage_text" />


    <ImageView
        android:id="@+id/batteryLevelImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_margin"
        android:layout_weight="90"
        android:src="@drawable/battery_level" />

    <TextView
        android:id="@+id/batteryStatusText"
        style="@style/style_grey_font"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center_horizontal"
        android:text="@string/battery_no_active_connection_message" />

</LinearLayout>
